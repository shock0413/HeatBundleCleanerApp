<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingListView"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:background="@drawable/selector_fieldset_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/steelblue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="메인 통신설정"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:rowCount="2"
                    android:columnCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="접속할 IP 주소"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <EditText
                        android:id="@+id/mainIpAddressEditText"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="0"
                        android:textCursorDrawable="@drawable/cursor_background"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:theme="@style/editText"
                        android:layout_margin="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포트번호"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <EditText
                        android:id="@+id/mainPortEditText"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="0"
                        android:textCursorDrawable="@drawable/cursor_background"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:theme="@style/editText"
                        android:layout_margin="10dp"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:singleLine="true"/>

                </GridLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:background="@drawable/selector_fieldset_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/steelblue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="통신 설정"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:rowCount="2"
                    android:columnCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="접속할 IP 주소"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <EditText
                        android:id="@+id/ipAddressEditText"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="0"
                        android:textCursorDrawable="@drawable/cursor_background"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:theme="@style/editText"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/steelblue"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포트번호"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <EditText
                        android:id="@+id/portEditText"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="0"
                        android:backgroundTint="@color/steelblue"
                        android:textCursorDrawable="@drawable/cursor_background"
                        android:textSelectHandle="@drawable/select_handler"
                        android:textSelectHandleLeft="@drawable/select_handler"
                        android:textSelectHandleRight="@drawable/select_handler"
                        android:theme="@style/editText"
                        android:layout_margin="10dp"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:singleLine="true"/>

                </GridLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/steelblue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="세척 설정"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:rowCount="4"
                    android:columnCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홀 표시 반경    "
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/holeSizeText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:backgroundTint="@color/steelblue"
                            android:textCursorDrawable="@drawable/cursor_background"
                            android:textSelectHandle="@drawable/select_handler"
                            android:textSelectHandleLeft="@drawable/select_handler"
                            android:textSelectHandleRight="@drawable/select_handler"
                            android:theme="@style/editText"
                            android:maxLength="10"
                            android:text="0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:singleLine="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/numericUpButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="＋"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/numericDownButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="－"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홀 표시 두께    "
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/holeThicknessText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:backgroundTint="@color/steelblue"
                            android:textCursorDrawable="@drawable/cursor_background"
                            android:textSelectHandle="@drawable/select_handler"
                            android:textSelectHandleLeft="@drawable/select_handler"
                            android:textSelectHandleRight="@drawable/select_handler"
                            android:theme="@style/editText"
                            android:maxLength="10"
                            android:text="0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:singleLine="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/holeThicknessUpButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="＋"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/holeThicknessDownButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="－"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홀 폰트 크기    "
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/holeFontSizeText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="10"
                            android:backgroundTint="@color/steelblue"
                            android:textCursorDrawable="@drawable/cursor_background"
                            android:textSelectHandle="@drawable/select_handler"
                            android:textSelectHandleLeft="@drawable/select_handler"
                            android:textSelectHandleRight="@drawable/select_handler"
                            android:theme="@style/editText"
                            android:text="0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:singleLine="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/holeFontSizeUpButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="＋"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/holeFontSizeDownButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="－"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홀 폰트 두께    "
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/holeFontThicknessText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="10"
                            android:backgroundTint="@color/steelblue"
                            android:textCursorDrawable="@drawable/cursor_background"
                            android:textSelectHandle="@drawable/select_handler"
                            android:textSelectHandleLeft="@drawable/select_handler"
                            android:textSelectHandleRight="@drawable/select_handler"
                            android:theme="@style/editText"
                            android:text="0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:singleLine="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/holeFontThicknessUpButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="＋"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/holeFontThicknessDownButtonChild"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_weight="1"
                                android:background="@drawable/ripple_background_button"
                                android:gravity="top"
                                android:text="－"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </RelativeLayout>

                </GridLayout>

            </LinearLayout>

            <Button
                android:id="@+id/settingConfirmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/ripple_background"
                android:textColor="@color/white"
                android:text="완료"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>