<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar"> -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/steelblue</item>
        <item name="colorPrimaryVariant">@color/steelblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="editText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/dodgerblue</item>
        <item name="colorControlNormal">@color/steelblue</item>
    </style>
</resources>